#!/usr/bin/env node

var config = require('../config.json');
var fs = require('fs');


var buildFile = '../public/javascript/build.js';
fs.readFile(buildFile, 'utf8', (err, data) => {
  if(err) { return console.log(err); }
  var result;

  for(var key in config) {
    var val = config[key];
    var regex = new Regexp(key, 'g');
    result = data.replace(regex, key[val]);
  }

  fs.writeFile(buildFile, result, 'utf8', function (err) {
     if (err) return console.log(err);
  });
});
